@model IEnumerable<FlightManager.Data.User>
<div class="card-deck" style="width:368px;">
    @foreach (var user in Model)
    {
        if (user.Role == "Employee")
        {
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@user.UserName</h5>
                    <p class="card-text">First name: @user.Email</p>
                    <p class="card-text">Last name: @user.LastName</p>
                    <a asp-action="Details" asp-route-Id="@user.Id">Details</a>
                    <a asp-action="Update" asp-route-Id="@user.Id">
                        <button class="btn btn-block btn-success" type="submit" aria-label="Update user">Update user</button>
                    </a>
                    <form asp-action="Delete" asp-route-Id="@user.Id" method="post">
                        <button class="btn btn-block btn-danger" type="submit" aria-label="Delete user">Delete user</button>
                    </form>
                </div>
            </div>
        }
    }
</div>
