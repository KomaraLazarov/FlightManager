@model FlightManager.Data.Entities.Reservation

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FlightId" class="control-label"></label>
                <select asp-for="FlightId" class ="form-control" asp-items="ViewBag.FlightId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PassengerId" class="control-label"></label>
                <select asp-for="PassengerId" class ="form-control" asp-items="ViewBag.PassengerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TypeTicket" class="control-label"></label>
                <input asp-for="TypeTicket" class="form-control" />
                <span asp-validation-for="TypeTicket" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <button type="button" onclick="location.href='@Url.Action("Index","Passengers")'">Back</button>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
